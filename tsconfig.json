{
    "compilerOptions": {
        "outDir": "lib",
        "lib": ["es2015", "es2016", "DOM"],
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "include": [
        "src/**/**.ts",
        "src/**/**.tsx",
        "tests/**/**.ts",
        "tests/**/**.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
